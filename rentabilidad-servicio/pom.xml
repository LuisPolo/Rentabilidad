<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.integra</groupId>
	<artifactId>rentabilidad-servicio</artifactId>
	<version>1.0</version>
	<packaging>war</packaging>
	<name>${project.artifactId}</name>
	
	<build>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources/META-INF</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.1.0</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-web-api</artifactId>
			<version>7.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
        	<groupId>com.integra</groupId>
            <artifactId>seguridad-servicio-cliente</artifactId>
            <version>1.0</version>
        </dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.8.2</version>
			<scope>${dependencias.alcance}</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>2.8.2</version>
			<scope>${dependencias.alcance}</scope>
		</dependency>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.8.1</version>
			<scope>${dependencias.alcance}</scope>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>entorno-local</id>
			<activation>
				<property>
					<name>entorno</name>
					<value>local</value>
				</property>
			</activation>
			<properties>
				<dependencias.alcance>compile</dependencias.alcance>
			</properties>
		</profile>
		<profile>
			<id>entorno-servidor</id>
			<activation>
				<property>
					<name>entorno</name>
					<value>servidor</value>
				</property>
			</activation>
			<properties>
				<dependencias.alcance>provided</dependencias.alcance>
			</properties>
		</profile>
	</profiles>
</project>